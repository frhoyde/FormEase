generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  email     String      @unique
  password  String
  name      String?
  Documnent Documnent[]
}

model FormTemplate {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String @unique

  categories Category[]
  tags       Tag[]

  formFieldGroups FormFieldGroup[]
}

model FormFieldGroup {
  id         String      @id @default(auto()) @map("_id") @db.ObjectId
  formFields FormField[]
  order      Int

  formTemplate   FormTemplate @relation(fields: [formTemplateId], references: [id])
  formTemplateId String       @db.ObjectId
}

model FormFieldType {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  FormField FormField[]
}

model FormField {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  order Int

  formFieldGroup   FormFieldGroup @relation(fields: [formFieldGroupId], references: [id])
  formFieldGroupId String         @db.ObjectId

  formFieldType   FormFieldType @relation(fields: [formFieldTypeId], references: [id])
  formFieldTypeId String        @db.ObjectId

  formFieldLabel   FormFieldLabel @relation(fields: [formFieldLabelId], references: [id])
  formFieldLabelId String         @unique @db.ObjectId
}

model FormFieldLabel {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String

  formField FormField?

  allowedFormFieldValues AllowedFormFieldValue[]
}

model AllowedFormFieldValue {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  value String

  formFieldLabel FormFieldLabel @relation(fields: [formFieldId], references: [id])
  formFieldId    String         @db.ObjectId
  Documnent      Documnent?     @relation(fields: [documnentId], references: [id])
  documnentId    String?        @db.ObjectId
}

model Documnent {
  id         String     @id @default(auto()) @map("_id") @db.ObjectId
  categories Category[]
  tags       Tag[]

  formFieldValues AllowedFormFieldValue[]
  User            User?                   @relation(fields: [userId], references: [id])
  userId          String?                 @db.ObjectId
}

model Category {
  id             String        @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  Documnent      Documnent?    @relation(fields: [documnentId], references: [id])
  documnentId    String?       @db.ObjectId
  FormTemplate   FormTemplate? @relation(fields: [formTemplateId], references: [id])
  formTemplateId String?       @db.ObjectId
}

model Tag {
  id             String        @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  Documnent      Documnent?    @relation(fields: [documnentId], references: [id])
  documnentId    String?       @db.ObjectId
  FormTemplate   FormTemplate? @relation(fields: [formTemplateId], references: [id])
  formTemplateId String?       @db.ObjectId
}
